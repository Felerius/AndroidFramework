<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_foto_app"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.hpi.hci.bachelorproject2016.fotoapp.FotoAppActivity">

    <Button
        android:text="@string/take_a_picture_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_open_camera"
        android:layout_below="@+id/web_view"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/pick_a_picture_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pick_picture"
        android:layout_below="@+id/btn_take_picture"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btn_take_a_picture_instantly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_take_picture"
        android:layout_below="@+id/btn_open_camera"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btn_speech_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btn_help"
        android:layout_below="@+id/btn_pick_picture"
        android:layout_alignParentStart="true" />

    <WebView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/web_view"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
